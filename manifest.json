{
  "manifest_version": 3,
  "name": "Ananta",
  "version": "1.0.1",
  "description": "A beautiful, privacy-first new tab page with bookmarks, top sites, and history.",
  "author": "KayoGen",

  "permissions": [
    "alarms",
    "bookmarks",
    "history",
    "topSites",
    "storage",
    "tabs",
    "scripting"
  ],

  "host_permissions": [
    "https://nominatim.openstreetmap.org/*",
    "http://localhost:8080/*",
    "http://127.0.0.1:8080/*"
  ],

  "background": {
    "scripts": ["js/background.js"]
  },

  "content_scripts": [
    {
      "matches": [
        "http://localhost:8080/ananta/*",
        "http://127.0.0.1:8080/ananta/*"
      ],
      "js": ["js/content.js"],
      "run_at": "document_start"
    }
  ],

  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "ananta@kayogen",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "icons": {
    "16": "assets/icons/icon16.svg",
    "32": "assets/icons/icon32.svg",
    "48": "assets/icons/icon48.svg",
    "128": "assets/icons/icon128.svg"
  },

  "action": {
    "default_title": "Ananta New Tab",
    "default_icon": {
      "16": "assets/icons/icon16.svg",
      "48": "assets/icons/icon48.svg",
      "128": "assets/icons/icon128.svg"
    }
  },

  "content_security_policy": {
    "extension_pages": "default-src 'self'; img-src 'self' chrome://favicon/ chrome://favicon2/ https://www.google.com https://icons.duckduckgo.com data: blob: https:; style-src 'self'; font-src 'self'; script-src 'self'; connect-src 'self' https://nominatim.openstreetmap.org https://devstack-api-dfn8.onrender.com http://localhost:8080 http://127.0.0.1:8080"
  }
}
